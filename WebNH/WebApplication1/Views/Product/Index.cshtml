

@using WebNuocHoa.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>
@{
    ViewBag.Title = "Index";
}
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Sản Phẩm Của Chúng Tôi</h2>
                    <span> Hãy Để Chúng Tôi Giúp Bạn Lan Tỏa Tự Tin và Bức Phá Chúng</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Products Area Starts ***** -->
<section class="section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2> Sản phẩm mới nhất của chúng tôi</h2>
                    <span>Hãy Trải Nghiệm Hương Thơm Mà Bạn Mong Muốn</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @{
                foreach (var i in Model)
                {
                    <div class="col-lg-4">
                        <div class="item">
                            <a href="@Url.Action("Index", "SingleProduct", new { id = i.MaSP })">
                                <div class="thumb">
                                    <img src="~/images/@i.AnhBia" alt="">
                                </div>
                                <div class="down-content">
                                    <h4>@i.TenSP</h4>
                                    <span>@i.GiaBan.000 VNĐ</span>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>      
</section>
<!-- ***** Products Area Ends ***** -->
@*Tạo lien kết các trang *@
<p style="font-family: monospace;font-size: 20px;margin-left: 560px; margin-top: 60px;">Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount</p>
<div  class="pagination">
   <p style="margin-left: 485px"> @Html.PagedListPager(Model, page => Url.Action("Index", new {page=page}))</p>
</div>
<style>
    /* Set the style for the a tag */
    .pagination a {
        color: black;
        float: left;
        padding: 12px 18px;
        text-decoration: none;
    }
        /* set the style for the active class */
        .pagination a.active {
            background-color: dodgerblue;
            color: white;
            /*Circle Design with CSS*/
            border-radius: 50%;
        }
        /* add background color when user hovers on inactive class */
        .pagination a:hover:not(.active) {
            background-color: #ddd;
            border-radius: 50%;
        }
</style>