@using WebNuocHoa.Models;
@{
    ViewBag.Title = "Index";
    SanPham i = ViewData["Details"] as SanPham;
}

<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Thông tin sản phẩm</h2>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Product Area Starts ***** -->
<section class="section" id="product">
    <div class="container">
        <div class="row">
            @{
                int n = 0;
                foreach (SanPham j in project.GetSanPhams())
                {
                    <div class="col-lg-5">
                        <div class="left-images">
                            <img src="~/images/@i.AnhBia" alt="">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="right-content">
                            <h4>@i.TenSP</h4>
                            <span class="price">@i.GiaBan.000 VNĐ</span>
                            <p>@i.MoTa</p>
                            <p>@i.MuiHuong</p>
                            <p>@i.DanhGia</p>
                            <div class="total">
                                <div class="main-border-button">
                                    <a style="border-radius: 15px;background-color: darkseagreen" href="@Url.Action("ThemGiohang", "Giohang", new { @iMaSP = @i.MaSP, @strURL = Request.Url.ToString() })">Thêm vào giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    if (n++ < 2)
                    { break; }
                }

            }
        </div>
    </div>
</section>
<!-- ***** Product Area Ends ***** -->
